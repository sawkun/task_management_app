<h1><%= current_user.name %>のタスク一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <a class="btn btn-lg btn-primary pull-right" href="/users/1/tasks/new">タスク新規作成</a>
    <table class="table table-hover" id="table-tasks">
      <thead>
        <tr>
          <th>名称</th>
          <th>作成日</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td>
              <%= link_to task.name, user_task_path(@user, task), class: "task-name" %>
            </td>
            <td>
              <%= task.created_at %>
            </td>
            <td>
              <%= link_to "編集", edit_user_task_path(@user, task), class: "btn btn-success" %>
            </td>
            <td>
              <%= link_to "削除", user_task_path(@user, task), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>