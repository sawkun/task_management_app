<% provide(:title, 'New Task') %>

<h1>タスク新規作成</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path, local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :detail, class: "form-label"%>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>
      <p></p>
      <%= link_to "新規登録", user_tasks_path(current_user.id), class: "btn btn-lg btn-primary btn-form" %>
    <% end %>
  </div>
</div>