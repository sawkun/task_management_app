<% provide(:title, 'Edit Task') %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_tasks_path(@user), local: true) do |f| %>
      
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :detail, class: "form-label"%>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>
      <p></p>
      <%= link_to "更新", user_task_path(@user), class: "btn btn-default btn-primary btn-update" %>
      <%= link_to "キャンセル", user_tasks_path(@user), class: "btn btn-default" %>
    <% end %>
  </div>
</div>